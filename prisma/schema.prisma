generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Species {
  DOG
  CAT
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  zipcode       String
  city          String
  state         String
  address       String
  number        String
  complement    String?
  phone         String
  password_hash String
  createdAt     DateTime @default(now())

  Pets        Pet[]

  @@map("organizations")
  @@index([city])
}

model Pet {
  id          String   @id @default(uuid())
  name        String
  species     Species
  gender      String
  color       String
  about       String
  age         String
  size        String
  energyLevel Int
  independenceLevel Int
  environmentSize String
  adoptionRequirements String[] @default([])
  photos      String[] @default([])

  createdAt   DateTime @default(now())

  Organization Organization @relation(fields: [orgId], references: [id])
  orgId       String

  @@map("pets")
}
